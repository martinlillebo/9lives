<h1>CATS CATS CATS</h1>

<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">CAT NAME</h5>
    <p class="card-text">short bio</p>
  </div>
  <ul class="list-group list-group-flush">
     <li class="list-group-item">Name</li>
    <li class="list-group-item">allergy </li>
    <li class="list-group-item">breed</li>
    <li class="list-group-item">gender</li>
     <li class="list-group-item">mood</li>
     <li class="list-group-item">Available</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">View Profile</a>
    <a href="#" class="card-link">Book Me</a>
  </div>
</div>




<div class="row row-cols-1 row-cols-md-2">
  <% @cats.each do |cat| %>
    <div class="col mb-4">
    <%= link_to cat_path(cat) do %>
    <div class="card">
      <%= cl_image_tag cat.photo.key, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= cat.name %></h5>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>

<a href="http://localhost:3000/cats/new" class="btn btn-primary">Register your cat/a>

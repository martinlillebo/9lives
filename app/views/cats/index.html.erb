<h1>CATS CATS CATS</h1>
<div class="container">
  <div class="row">
    <% @cats.each do |cat|%>
      <div class="col-sm card-margin">
        <div class="card mx-auto"  style="width: 18rem;">
          <%= cl_image_tag cat.photo.key, height: 200, width: 280, crop: :fill if cat.photo.attached?%>
            <div class="card-body">
              <h5 class="card-title"><b><%=cat.name%></b></h5>
              <p class="list-group-item">Bio: <i><%=cat.bio%></i></p>
            </div>

            <div class="card-body">
              <%= link_to "View Profile", cat_path(cat), class:"btn btn-primary" %>
            </div>
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>


<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
